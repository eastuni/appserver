   AND arr_actvty_biz_cd = #{arrActvtyBizCd}

</if>

<if test="arrActvtyStsCd != null and arrActvtyStsCd != '' ">

   AND arr_actvty_sts_cd = #{arrActvtyStsCd}

</if>
</select>

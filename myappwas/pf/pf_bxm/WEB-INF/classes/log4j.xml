<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender class="bxm.common.log4j.PatternFileAppender" name="applogfile"> 
        <param name="NamePattern" value="${logHome}/applog_%d{yyyyMMdd}.log"/> 
        <layout class="org.apache.log4j.PatternLayout"> 
            <param name="ConversionPattern" value="[%d{yy/MM/dd HH:mm:ss,SSS}][%p][%F:%L] %m%n"/> 
        </layout> 
    </appender>
    <!-- bxm logger -->
    <logger name="bxm.common.log4j">
        <level value="debug" />
        <appender-ref ref="applogfile" />
    </logger>
    <logger name="bxm.instance">
        <level value="debug" />
        <appender-ref ref="applogfile" />
    </logger>
    <logger name="bxm.request">
        <level value="debug" />
        <appender-ref ref="applogfile" />
    </logger>
    <logger name="bxm.app.config">
        <level value="info" />
        <appender-ref ref="applogfile" />
    </logger>
    <!-- application logger -->
    <logger name="bxmappex">
		<level value="debug" />
    </logger>

	    <!-- deps logger -->
    <logger name="com.ibatis">
        <level value="error" />
		<appender-ref ref="applogfile" />
    </logger>

	<logger name="java.sql.PreparedStatement">
        <level value="error" />
		<appender-ref ref="applogfile" />
    </logger>	
	
	<logger name="java.sql.Statement">
        <level value="error" />
		<appender-ref ref="applogfile" />
    </logger>

	<logger name="java.sql.Resultset">
        <level value="error" />
		<appender-ref ref="applogfile" />
    </logger>
	
    <logger name="org.apache">
        <level value="info" />
		<appender-ref ref="applogfile" />
    </logger>
    
    <logger name="org.springframework.security">
        <level value="info" />
		<appender-ref ref="applogfile" />
    </logger>
	
    <root>
		<priority value="debug" />
        <appender-ref ref="applogfile" />
    </root>
</log4j:configuration>

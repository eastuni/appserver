<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
    		<param name="ConversionPattern" value="[%d{yy/MM/dd HH:mm:ss,SSS}] [%p] [%F:%L] %m%n" />
		</layout>
	</appender>
	<appender name="filelog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="PFactoryFile" value="/home/pfdev/tomcat7/logs/pfactory"/>
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<param name="Append" value="true"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yy/MM/dd HH:mm:ss,SSS}][%bxm{guid}][%p][%F:%L] %m%n" />
		</layout>
	</appender>

	<logger name="java.sql">
		<level value="info" />
		<!--level value="all" /-->
	</logger>

	<logger name="org.apache">
		<level value="info" />
		<!--level value="all" /-->
	</logger>

	<logger name="org.springframework">
		<level value="info" />
	</logger>

	<logger name="PfUIProject">
		<level value="debug" />
	</logger>
	
	<logger name="org.objectweb.jotm">
		<level value="info" />
	</logger>
	
	<logger name="org.enhydra">
		<level value="info" />
	</logger>

	<root>
		<!--priority value="all" /-->
		<priority value="debug" />
		<appender-ref ref="PfUIProject" />
		<appender-ref ref="filelog" />
	</root>
</log4j:configuration>
